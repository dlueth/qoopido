{
    "name": "root",
    "description": "Monorepo containing various @qoopido packages",
    "private": true,
    "license": "MIT",
    "author": {
        "name": "Dirk Lueth",
        "email": "info@qoopido.com"
    },
    "homepage": "https://github.com/dlueth/qoopido",
    "repository": {
        "type": "git",
        "url": "git://github.com/dlueth/qoopido.git"
    },
    "bugs": {
        "url": "https://github.com/dlueth/qoopido/issues"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "bootstrap": "yarn install && lerna bootstrap",
        "lint": "lerna run lint",
        "lint:fix": "lerna run lint:fix",
        "test": "yarn build && jest --config ./.jestrc.js ./packages",
        "test:coverage": "yarn build && jest --verbose --config ./.jestrc.js --collectCoverage ./packages",
        "test:ci": "yarn build && jest --verbose --config ./.jestrc.js --collectCoverage --coverageDirectory ./coverage ./packages",
        "build": "node script/build.js",
        "publish": "lerna publish --message \"chore: publish\" --contents dist",
        "publish:prerelease": "lerna publish --message \"chore: publish prerelease\" --canary --dist-tag prerelease --contents dist",
        "prepack": "node script/build.js && node script/prepack.js"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@commitlint/config-lerna-scopes": "^8.3.4",
        "@rollup/plugin-buble": "^0.21.3",
        "@rollup/plugin-commonjs": "^12.0.0",
        "@rollup/plugin-node-resolve": "^8.0.0",
        "eslint": "^7.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-import-resolver-lerna": "^1.1.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-prettier": "^3.1.3",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
        "lerna": "^3.22.0",
        "lint-staged": "^10.2.7",
        "prettier": "^2.0.5",
        "rimraf": "^3.0.2",
        "rollup": "^2.12.0",
        "rollup-plugin-peer-deps-external": "^2.2.2",
        "rollup-plugin-serve": "^1.0.1",
        "rollup-plugin-terser": "^6.1.0"
    },
    "engines": {
        "node": ">=12"
    },
    "browserslist": [
        ">2% in DE",
        "not dead",
        "not ie < 11",
        "not op_mini all"
    ]
}
