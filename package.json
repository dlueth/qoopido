{
    "name": "root",
    "description": "Monorepo containing various @qoopido packages",
    "private": true,
    "license": "MIT",
    "author": {
        "name": "Dirk Lueth",
        "email": "info@qoopido.com"
    },
    "homepage": "https://github.com/dlueth/qoopido",
    "repository": {
        "type": "git",
        "url": "git://github.com/dlueth/qoopido.git"
    },
    "bugs": {
        "url": "https://github.com/dlueth/qoopido/issues"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "bootstrap": "yarn install && lerna bootstrap",
        "lint": "lerna run lint",
        "lint:fix": "lerna run lint:fix",
        "test": "jest",
        "test:coverage": "jest --collectCoverage",
        "test:ci": "jest --collectCoverage --coverageDirectory ./coverage",
        "build": "node script/build.js",
        "publish": "lerna publish --message \"chore: publish\" --contents dist",
        "publish:prerelease": "lerna publish --message \"chore: publish prerelease\" --canary --dist-tag prerelease --contents dist",
        "prepack": "node script/build.js && node script/prepack.js"
    },
    "devDependencies": {
        "@babel/core": "^7.10.3",
        "@babel/preset-env": "^7.10.3",
        "@commitlint/cli": "^9.0.1",
        "@commitlint/config-conventional": "^9.0.1",
        "@commitlint/config-lerna-scopes": "^9.0.1",
        "@rollup/plugin-buble": "^0.21.3",
        "@rollup/plugin-commonjs": "^13.0.0",
        "@rollup/plugin-node-resolve": "^8.1.0",
        "babel-jest": "^26.0.1",
        "commitizen": "^4.1.2",
        "cz-conventional-changelog": "^3.2.0",
        "eslint": "^7.3.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-import-resolver-lerna": "^1.1.0",
        "eslint-plugin-import": "^2.21.2",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
        "jest-canvas-mock": "^2.2.0",
        "lerna": "^3.22.1",
        "lint-staged": "^10.2.11",
        "node-fetch": "^2.6.0",
        "prettier": "^2.0.5",
        "rimraf": "^3.0.2",
        "rollup": "^2.18.0",
        "rollup-plugin-peer-deps-external": "^2.2.2",
        "rollup-plugin-serve": "^1.0.1",
        "rollup-plugin-terser": "^6.1.0",
        "uuid-v4": "^0.1.0",
        "web-worker": "^1.0.0"
    },
    "engines": {
        "node": ">=14"
    },
    "browserslist": [
        ">2% in DE",
        "not dead",
        "not ie < 11",
        "not op_mini all"
    ],
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
